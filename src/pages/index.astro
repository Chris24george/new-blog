---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';
import type { CollectionEntry } from 'astro:content';

const allPosts = await getCollection('blog');
allPosts.sort((a: CollectionEntry<'blog'>, b: CollectionEntry<'blog'>) => 
  b.data.date.getTime() - a.data.date.getTime()
);

// Group posts by year
const postsByYear = allPosts.reduce((acc: Record<number, CollectionEntry<'blog'>[]>, post: CollectionEntry<'blog'>) => {
  const year = post.data.date.getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a));

// Get the latest post for og:image
const latestPost = allPosts[0];
const ogImage = '/blog-social-card.jpg'; // Default OG image
---

<Layout 
  title="Christo Notes | Essays & Thoughts"
  description="Language learning, history, philosophy, classic literature, miscellaneous thoughts"
  image={ogImage}
>
  <section class="hero">
    <h1>Christo Notes</h1>
    <p class="subtitle">Language learning, history, philosophy, classic literature, miscellaneous thoughts</p>
  </section>

  <div class="timeline-container">
    {allPosts.length === 0 ? (
      <div class="coming-soon">
        <h2>Essays Coming Soon</h2>
        <p>I'm currently working on the first set of essays. Stay tuned!</p>
        <p>In the meantime, you can <a href="/about">learn more about this blog</a> or <a href="/rss.xml">subscribe to the RSS feed</a> to be notified when new essays are published.</p>
      </div>
    ) : (
      <>
        {years.length > 1 && (
          <nav class="year-nav">
            <div class="year-nav-inner">
              {years.map(year => (
                <a href={`#year-${year}`} class="year-link">{year}</a>
              ))}
            </div>
          </nav>
        )}

        <div class="timeline">
          {years.map(year => (
            <section id={`year-${year}`} class="year-section">
              <h2>{year}</h2>
              <div class="posts-list">
                {postsByYear[Number(year)].map((post: CollectionEntry<'blog'>) => (
                  <article class="post-item">
                    <time datetime={post.data.date.toISOString()}>
                      {format(post.data.date, 'MMM d')}
                    </time>
                    <a href={`/blog/${post.slug}`}>
                      <h3>{post.data.title}</h3>
                      <p>{post.data.description}</p>
                    </a>
                  </article>
                ))}
              </div>
            </section>
          ))}
        </div>
      </>
    )}
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0 3rem;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin: 0;
    background: linear-gradient(45deg, var(--text-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 0 2px 10px rgba(var(--accent-rgb), 0.1);
  }

  .subtitle {
    font-size: 1.2rem;
    color: var(--text-color);
    opacity: 0.8;
    font-style: italic;
    margin-top: 1rem;
  }

  .timeline-container {
    max-width: 680px;
    margin: 0 auto;
    position: relative;
  }

  .year-nav {
    position: sticky;
    top: 1rem;
    z-index: 10;
    margin-bottom: 2rem;
    padding: 1rem;
    backdrop-filter: blur(12px);
    border-radius: 20px;
    background: var(--nav-bg);
    box-shadow: var(--nav-shadow);
    border: 1px solid var(--border-color);
  }

  .year-nav-inner {
    display: flex;
    justify-content: center;
    gap: 1rem;
    padding: 0.5rem;
  }

  .year-link {
    color: var(--text-color);
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border-radius: 15px;
    font-family: 'Playfair Display', serif;
    font-size: 1.2rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    background: transparent;
  }

  .year-link:hover {
    background: color-mix(in srgb, var(--accent-color) 10%, transparent);
    color: var(--accent-color);
    transform: translateY(-2px);
  }

  .year-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 50%;
    width: 0;
    height: 2px;
    background: var(--accent-color);
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .year-link:hover::after {
    width: 80%;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom,
      var(--accent-color) 0%,
      color-mix(in srgb, var(--accent-color) 5%, transparent));
  }

  .year-section {
    margin-bottom: 4rem;
    scroll-margin-top: 5rem;
  }

  .year-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: var(--text-color);
    opacity: 0.8;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-item {
    position: relative;
    padding-left: 2rem;
  }

  .post-item::before {
    content: '';
    position: absolute;
    left: -2rem;
    top: 0.5rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--accent-color);
    border: 3px solid var(--bg-color);
    box-shadow: 0 0 0 2px var(--accent-color);
  }

  .post-item time {
    font-size: 0.9rem;
    color: var(--accent-color);
    font-style: italic;
    display: block;
    margin-bottom: 0.25rem;
    opacity: 0.8;
  }

  .post-item a {
    text-decoration: none;
    color: inherit;
    display: block;
    padding: 1.5rem;
    background: var(--card-bg);
    border-radius: 16px;
    border: 1px solid var(--border-color);
    transition: all 0.3s cubic-bezier(0.165, 0.84, 0.44, 1);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    box-shadow: 
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .post-item a:hover {
    background: var(--card-bg-hover);
    transform: translateY(-2px) translateX(4px);
    box-shadow: var(--card-shadow);
    border-color: color-mix(in srgb, var(--accent-color) 30%, var(--border-color));
  }

  .post-item h3 {
    margin: 0;
    font-size: 1.3rem;
    color: var(--text-color);
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .post-item:hover h3 {
    color: var(--accent-color);
  }

  .post-item p {
    margin: 0.5rem 0 0;
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.6;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 3rem 0 2rem;
    }

    .hero h1 {
      font-size: 2.5rem;
    }

    .year-nav {
      margin: 0 -1rem 2rem;
      border-radius: 0;
      top: 0;
      padding: 1rem;
      border-left: none;
      border-right: none;
    }

    .year-nav-inner {
      overflow-x: auto;
      justify-content: flex-start;
      padding: 0.25rem;
      gap: 0.75rem;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .year-nav-inner::-webkit-scrollbar {
      display: none;
    }

    .year-link {
      font-size: 1.1rem;
      padding: 0.6rem 1.2rem;
      white-space: nowrap;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .year-section {
      margin-bottom: 3rem;
      scroll-margin-top: 4rem;
    }

    .year-section h2 {
      font-size: 1.8rem;
      margin-bottom: 1.5rem;
    }

    .post-item {
      padding-left: 1.5rem;
    }

    .post-item::before {
      left: -1.5rem;
      width: 10px;
      height: 10px;
    }

    .post-item a {
      padding: 1rem;
    }

    .post-item h3 {
      font-size: 1.2rem;
    }
  }

  .coming-soon {
    text-align: center;
    padding: 4rem 2rem;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    margin: 2rem 0;
  }

  .coming-soon h2 {
    font-size: 2rem;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .coming-soon p {
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.6;
    margin: 1rem 0;
  }

  .coming-soon a {
    color: var(--accent-color);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .coming-soon a:hover {
    border-bottom-color: var(--accent-color);
  }

  /* Add these CSS custom properties to :root */
  :root {
    --accent-rgb: 139, 69, 19;
    --nav-bg: rgba(255, 255, 255, 0.9);
    --nav-shadow: 
      0 4px 20px rgba(139, 69, 19, 0.08),
      0 2px 8px rgba(139, 69, 19, 0.06);
    --card-bg: rgba(255, 255, 255, 0.02);
    --card-bg-hover: rgba(255, 255, 255, 0.05);
    --card-shadow: 
      0 4px 16px rgba(139, 69, 19, 0.06),
      0 2px 4px rgba(139, 69, 19, 0.03);
    --border-color: rgba(255, 255, 255, 0.08);
  }

  /* Dark mode overrides */
  [data-theme="dark"] {
    --accent-rgb: 212, 145, 91;
    --nav-bg: rgba(32, 32, 32, 0.95);
    --nav-shadow: 
      0 4px 20px rgba(0, 0, 0, 0.2),
      0 2px 8px rgba(0, 0, 0, 0.1);
    --card-bg: rgba(255, 255, 255, 0.03);
    --card-bg-hover: rgba(255, 255, 255, 0.05);
    --card-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.2),
      0 2px 8px rgba(0, 0, 0, 0.1);
    --border-color: rgba(255, 255, 255, 0.05);
  }

  /* Add this to ensure the timeline dot has the right background in dark mode */
  .post-item::before {
    content: '';
    position: absolute;
    left: -2rem;
    top: 0.5rem;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--accent-color);
    border: 3px solid var(--bg-color);
    box-shadow: 0 0 0 2px var(--accent-color);
  }
</style>