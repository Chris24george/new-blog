---
import '@fontsource/playfair-display/400.css';
import '@fontsource/playfair-display/700.css';
import '@fontsource/lora/400.css';
import '@fontsource/lora/400-italic.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'An elegant blog' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <nav>
          <a href="/" class="site-title">Elegant Scroll</a>
          <div class="nav-links">
            <a href="/blog">Blog</a>
            <a href="/about">About</a>
          </div>
        </nav>
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <p>&copy; {new Date().getFullYear()} Your Name. All rights reserved.</p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --bg-color: #faf6f1;
    --text-color: #2c1810;
    --accent-color: #8b4513;
    --border-color: rgba(139, 69, 19, 0.2);
  }

  html {
    font-family: 'Lora', serif;
    background: var(--bg-color);
    color: var(--text-color);
  }

  body {
    margin: 0;
    min-height: 100vh;
    line-height: 1.8;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', serif;
    font-weight: 700;
    line-height: 1.2;
  }

  header {
    margin-bottom: 4rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 1rem;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .site-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    color: var(--text-color);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
  }

  .nav-links a {
    color: var(--text-color);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: var(--accent-color);
  }

  footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
    text-align: center;
    font-size: 0.9rem;
    color: rgba(44, 24, 16, 0.8);
  }
</style>