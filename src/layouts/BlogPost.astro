---
import Layout from './Layout.astro';
import { format } from 'date-fns';

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | Elegant Scroll`}>
  <article class="max-w-[700px] mx-auto">
    <header class="text-center mb-12">
      <h1 class="text-5xl m-0 font-playfair bg-gradient-to-r from-[color:var(--text-color)] to-[color:var(--accent-color)] bg-clip-text text-transparent">
        {frontmatter.title}
      </h1>
      <time datetime={frontmatter.date} class="block mt-4 text-[rgba(44,24,16,0.6)] dark:text-[rgba(225,217,209,0.6)] italic">
        {format(new Date(frontmatter.date), 'MMMM d, yyyy')}
      </time>
    </header>
    <div class="prose prose-lg prose-stone dark:prose-invert max-w-none [&_h1]:font-playfair [&_h2]:font-playfair [&_h3]:font-playfair [&_h4]:font-playfair [&_h5]:font-playfair [&_h6]:font-playfair">
      <slot />
    </div>
  </article>
</Layout>

<style is:global>
  /* Custom styles for elements that can't be handled by Tailwind Typography */
  .prose :global(blockquote) {
    @apply border-l-4 border-[color:var(--accent-color)] bg-[rgba(139,69,19,0.05)] dark:bg-[rgba(139,69,19,0.1)] px-8 py-4 my-8 italic;
  }

  .prose :global(pre) {
    @apply bg-[rgba(44,24,16,0.95)] text-[#faf6f1] p-6 rounded-lg overflow-x-auto my-8;
  }

  .prose :global(pre code) {
    @apply bg-transparent p-0 text-sm;
  }

  .prose :global(code) {
    @apply bg-[rgba(139,69,19,0.1)] px-2 py-1 rounded-md text-sm;
  }

  .prose :global(img) {
    @apply rounded-lg my-8;
  }
</style>